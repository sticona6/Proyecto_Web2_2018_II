@model List<Cuna_Mas_Web2.Models.DatosMedicos>
@{
    ViewBag.Title = "Tabla";
}
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Tabla de Datos Medicos</h2>
    </div>
</header>
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/DatosMedicos/AgregarEditar/">Agregar Nuevo</a></li>
        <li class="breadcrumb-item active">Tablas</li>
    </ul>
</div>
<section class="tables">
    <div class="container-fluid">
        <div class="">
            <div class="">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Datos Medicos</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Dato Medico</th>
                                        <th>Altura</th>
                                        <th>Peso</th>
                                        <th>Fecha</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string fecha = String.Format("{0:dd/MM/yyyy}", item.fecha_revision);
                                        <tr>
                                            <th scope="row">@(item.id)</th>
                                            <td>@(item.nombre)</td>
                                            <td>@(item.altura) m</td>
                                            <td>@(item.peso) Kg</td>
                                            <td>@(fecha)</td>
                                            <td>
                                                <a href="~/DatosMedicos/Ver/@item.id" class="btn btn-sm btn-warning">Detalles</a>
                                                <a href="~/DatosMedicos/AgregarEditar/@item.id" class="btn btn-sm btn-primary">Modificar</a>
                                                <a href="~/DatosMedicos/Eliminar/@item.id" class="btn btn-sm btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro ...?')">Eliminar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>