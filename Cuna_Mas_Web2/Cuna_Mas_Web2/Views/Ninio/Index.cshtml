@model List<Cuna_Mas_Web2.Models.Ninio>
@{
    ViewBag.Title = "Tabla";
}
<br />
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Inicio</a></li>
        <li class="breadcrumb-item"><a href="~/Ninio/AgregarEditar/">Agregar nuevo</a></li>
        <li class="breadcrumb-item active">Tablas</li>
    </ul>
</div>
<section class="tables">
    <div class="container-fluid">
        <div class="">
            <div class="">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Datos Niño</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Nombre</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string fecha = String.Format("{0:dd/MM/yyyy}", item.fecha_nacimiento);
                                        <tr>
                                            <th scope="row">@(item.id)</th>
                                            <td>@(item.nombre)</td>
                                            <td>@(fecha)</td>
                                            <td>@(item.estado)</td>
                                            <td>
                                                <a href="~/Ninio/Ver/@item.id" class="btn btn-sm btn-warning">Detalles</a>
                                                <a href="~/Ninio/AgregarEditar/@item.id" class="btn btn-sm btn-primary">Modificar</a>
                                                <a href="~/DatosQR/Guardar/@item.id" class="btn btn-sm btn-warning">QR</a>
                                                <a href="~/Ninio/Eliminar/@item.id" class="btn btn-sm btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro ...?')">Eliminar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>