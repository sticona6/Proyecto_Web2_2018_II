@model Cuna_Mas_Web2.Models.Usuario
@{
    ViewBag.Title = "Mantenimiento Usuario";
}
<br />
<div id="Padre">
    <nav aria-label="breadcrumb">
        <h2 class="text-center">Mantenimiento de Usuario</h2>
        <div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item" style="padding-left:0.5em;"><a href="~/Usuario/Index">Lista de Usuario</a></li>
                <li class="breadcrumb-item active">
                    @(Model.id > 0 ? Model.usuario1 : "Nuevo Registro")
                </li>
            </ol>
        </div>
    </nav>
    <br />
    @using (Html.BeginForm("Guardar", "Usuario", FormMethod.Post, new { @id = "frm-persona" }))
    {
        @Html.HiddenFor(x => x.id)
        <div class="panel panel-default">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        @Html.Label("Id:")
                        @Html.TextBoxFor(x => x.id, new { @class = "form-control", disabled = true })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Usuario:")
                        @Html.TextBoxFor(x => x.usuario1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.usuario1, null, new { @class = "label label-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Tipo:")
                        <select name="tipo" class="form-control">
                            <option @(Model.estado == "" ? "selected" : "") value="">Seleccione</option>
                            <option @(Model.estado == "Madre Cuidadora" ? "selected" : "") value="Madre Cuidadora">Madre Cuidadora</option>
                            <option @(Model.estado == "Madre Familia" ? "selected" : "") value="Madre Familia">Madre Familia</option>
                            <option @(Model.estado == "Madre Guia" ? "selected" : "") value="Madre Guia">Madre Guia</option>
                            <option @(Model.estado == "Jefa" ? "selected" : "") value="Jefa">Jefa</option>
                            <option @(Model.estado == "Padre Familia" ? "selected" : "") value="I">Padre Familia</option>
                        </select>
                        @Html.ValidationMessageFor(x => x.tipo, null, new { @class = "label label-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.Label("Clave:")
                        @Html.PasswordFor(x => x.clave, new { @class = "form-control", @placeholder = " Altura del Niño" })
                        @Html.ValidationMessageFor(x => x.clave, null, new { @class = "label label-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Estado:")
                        <select name="estado" class="form-control">
                            <option @(Model.estado == "" ? "selected" : "") value="">Seleccione</option>
                            <option @(Model.estado == "A" ? "selected" : "") value="A">Activo</option>
                            <option @(Model.estado == "I" ? "selected" : "") value="I">Inactivo</option>
                        </select>
                        @Html.ValidationMessageFor(x => x.estado, null, new { @class = "label label-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.Label("Imagen:")
                        @Html.TextBoxFor(x => x.imagen, new { @class = "form-control", @placeholder = "011 51 1 1234567" })
                        @Html.ValidationMessageFor(x => x.imagen, null, new { @class = "label label-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-primary">GRABAR</button>
            <a href="~/Usuario/Index" class="btn btn-danger">CANCELAR</a>
        </div>
    }
    <br />
</div>