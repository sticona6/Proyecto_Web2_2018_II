@model List<Cuna_Mas_Web2.Models.Observacion>
@{
    ViewBag.Title = "Observacion";
}
<!-- Page Header-->
<br />
<!-- Breadcrumb-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Observacion/AgregarEditar/">Agregar nuevo</a></li>
        <li class="breadcrumb-item active">Tablas</li>
    </ul>
</div>
<section class="tables">
    <div class="container-fluid">
        <div class="">
            <div class="">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Observación</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Título</th>
                                        <th>Descripción</th>
                                        <th>Fecha</th>
                                        <th>Madre</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@(item.id)</th>
                                            <td>@(item.titulo)</td>
                                            <td>@(item.descripcion)</td>
                                            <td>@(item.fecha)</td>
                                            <td>@(item.Madre.nombre + " " + item.Madre.apellido)</td>
                                            <td>
                                                <a href="~/Observacion/Ver/@item.id" class="btn btn-sm btn-warning">Detalles</a>
                                                <a href="~/Observacion/AgregarEditar/@item.id" class="btn btn-sm btn-primary">Modificar</a>
                                                <a href="~/Observacion/Eliminar/@item.id" class="btn btn-sm btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro ...?')">Eliminar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>